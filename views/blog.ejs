<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%- blog.coverImage %>" width="400px" />
      <pre class="fs-3 mt-3"><%= blog.content %></pre>

      <div class="container mt-4 fs-1">By - <%= blog.createdBy.fullName %></div>

      <div class="container mb-5 mt-3">
        <h1>Comments (<%= comments.length %>)</h1>

        <% if (locals.user) { %>
          <div class="mt-3">
        <form action="/blog/comment/<%= blog._id  %>" method="post">
          <h4>Add your comment</h4>
          <input type="text" name="commentContent" class="form-control mt-2" />
          <button type="submit" class="btn mt-3 btn-primary">Add</button>
        </form>
        <% } %>
      </div>

    </div>
    <div class="container mb-5 fs-4">
      <% comments.forEach(comment => { %>
      <p><%= comment.commentContent %> <p> - <%= comment.createdBy.fullName %> </p></p>
      <% }) %>
    </div>
    </div>


    <%-include('./partials/script') %>
  </body>
</html>
